generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Gender {
  masculino
  femenino
  outro
}

enum UserType {
  individual
  hospital
  @@map("user_type")
}

enum Urgency {
  normal
  media
  alta
}

enum State {
  pendente
  conclu√≠do
  cancelado
}

model BloodType {
  id Int @id @default(autoincrement())
  name String
  description String?
  users User[]
  orders Order[]
  @@map("blood_type")
}


model User {
  id Int @id @default(autoincrement())
  email String @unique
  username String
  password String
  fullname String?
  gender Gender? @default(outro)
  user_type UserType
  state Boolean @default(false)
  address String
  phone String
  description String?
  blood_type BloodType? @relation(fields: [blood_type_id], references: [id])
  blood_type_id Int?
  orders Order[]
}

model Order {
  id Int @id @default(autoincrement())
  donate_location String
  urgency Urgency
  description String
  state State @default(pendente)
  user User @relation(fields: [user_id], references: [id])
  user_id Int
  blood_type BloodType @relation(fields: [blood_type_id], references: [id])
  blood_type_id Int
}
