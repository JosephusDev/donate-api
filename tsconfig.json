{
	"compilerOptions": {
		"target": "ES2020",
		"module": "Node16",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "Node16",
		"baseUrl": "./src"
	},
	"include": ["src"],
	"exclude": ["node_modules", "./jest.config.ts", "./tests"]
}
