{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "node",
		"allowImportingTsExtensions": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": ["node_modules", "./jest.config.ts", "./tests"]
}
